<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BookSearch.Control.BookInfo">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" HeightRequest="88" HorizontalOptions="FillAndExpand">
            <Image Source="{Binding Thumbnail}" x:Name="Thumbnail" HeightRequest="64" VerticalOptions="Center" Margin="16,0,16,0" />
            <Label Text="{Binding Title}" x:Name="Title" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Grid.Row="0" />
        </StackLayout>
    </ContentView.Content>
</ContentView>